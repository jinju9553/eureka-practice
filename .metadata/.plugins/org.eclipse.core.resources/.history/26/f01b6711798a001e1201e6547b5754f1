
server:
  port: 8000 #Vue 측에서 axios로 요청하는 공개 포트
  
# 서버에 등록해야 하기 때문에 이름을 지정함
spring:
  application:
    name: apigateway-service
# routing 세팅 (자바 config & yml 설정 모두 가능)
  cloud:
    gateway:
      mvc:
        routes:
        - id: client-service
          uri: lb://CLIENT-SERVICE #랜덤 포트 번호를 모르므로 로드밸런싱 사용 (유레카 서버에 등록된 명칭 사용)
